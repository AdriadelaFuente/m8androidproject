<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HorariMovie"
    android:id="@+id/horarimovies">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/HorariMovieLayout">
    <Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:elevation="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/movieText"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_weight="1" />
        </LinearLayout>
    </Toolbar>
    <TextView
        android:id="@+id/NomMovieHorari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold|italic"
        android:layout_margin="15dp"
        android:textSize="30dp"
        android:text="Movie: " />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:text="Dilluns"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
            <TextView
                android:id="@+id/tvDilluns"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Dimarts"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
            <TextView
                android:id="@+id/tvDimarts"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Dimecres"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
            <TextView
                android:id="@+id/tvDimecres"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Dijous"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
            <TextView
                android:id="@+id/tvDijous"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Divendres"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
            <TextView
                android:id="@+id/tvDivendres"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Dissabte"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
            <TextView
                android:id="@+id/tvDissabte"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Diumenge"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
            <TextView
                android:id="@+id/tvDiumenge"
                android:padding="3dip"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </TableRow>
    </TableLayout>
    </LinearLayout>
</LinearLayout>