<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Configuracio"
    android:orientation="vertical"
    android:id="@+id/configuracioLayout">
    <Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:elevation="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            tools:ignore="UseCompoundDrawables">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/settingsText"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"
                android:contentDescription="@string/settingsText"/>
        </LinearLayout>
    </Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/bgColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menuConfig1"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginVertical="5dp"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            />
        <Button
            android:id="@+id/fontSizePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menuConfig2"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginVertical="5dp"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:enabled="false"
            />
        <Button
            android:id="@+id/fontColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menuConfig3"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginVertical="5dp"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:enabled="false"
            />
    </LinearLayout>
</LinearLayout>