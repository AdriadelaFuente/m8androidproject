<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Configuracio"
    android:padding="20dp"
    android:orientation="vertical"
    android:id="@+id/layout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settingsText"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/bgColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menuConfig1"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginVertical="5dp"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            />
        <Button
            android:id="@+id/fontSizePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menuConfig2"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginVertical="5dp"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            />
        <Button
            android:id="@+id/fontColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menuConfig3"
            android:textAlignment="center"
            android:textSize="17sp"
            android:layout_marginVertical="5dp"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            />
    </LinearLayout>
</LinearLayout>