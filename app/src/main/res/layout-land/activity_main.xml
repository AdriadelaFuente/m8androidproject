<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/mainLayout">
    <TableLayout
        android:layout_width="450dp"
        android:layout_height="320dp"
        tools:ignore="UselessParent">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/restaurants"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/main_card"
                android:contentDescription="@string/btn1Text"
                android:src="@drawable/restaurant"
                tools:ignore="RedundantDescriptionCheck" />

            <ImageButton
                android:id="@+id/businesses"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/main_card"
                android:contentDescription="@string/btn2Text"
                android:src="@drawable/business"
                tools:ignore="RedundantDescriptionCheck" />

            <ImageButton
                android:id="@+id/hotels"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/main_card"
                android:contentDescription="@string/btn3Text"
                android:src="@drawable/hotel"
                tools:ignore="RedundantDescriptionCheck" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/main_card"
                android:contentDescription="@string/btn4Text"
                android:src="@drawable/weather"
                tools:ignore="RedundantDescriptionCheck" />

            <ImageButton
                android:id="@+id/movies"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/main_card"
                android:contentDescription="@string/btn5Text"
                android:src="@drawable/movie"
                tools:ignore="RedundantDescriptionCheck" />

            <ImageButton
                android:id="@+id/parkings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/main_card"
                android:contentDescription="@string/btn6Text"
                android:src="@drawable/parking"
                tools:ignore="RedundantDescriptionCheck" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnSettings"
                android:layout_weight="2"
                style="@style/Widget.Material3.Button.IconButton"
                android:text="@string/settingsText"
                tools:ignore="VisualLintButtonSize" />
        </TableRow>
    </TableLayout>
</LinearLayout>