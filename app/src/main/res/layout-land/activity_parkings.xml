<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parkingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Hotels">
    <Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            tools:ignore="UseCompoundDrawables">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/parkingText"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/parkingText"
                android:src="@drawable/parking" />
        </LinearLayout>
    </Toolbar>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:columnCount="3"
            android:padding="15dp"
            android:rowCount="1">
            <androidx.cardview.widget.CardView
                android:id="@+id/parking1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/parking1Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/parking_1_name"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/total"
                            android:contentDescription="@string/total_places_icon" />
                        <TextView
                            android:id="@+id/parking1TotalPlaces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/parking_1_total_places"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:src="@drawable/available"
                            android:contentDescription="@string/available_places_icon" />
                        <TextView
                            android:id="@+id/parking1AvailablePlaces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/parking_1_available_places"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/parking2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/parking2Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/parking_2_name"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/total"
                            android:contentDescription="@string/available_places_icon" />
                        <TextView
                            android:id="@+id/parking2TotalPlaces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/parking_2_total_places"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:src="@drawable/available"
                            android:contentDescription="@string/available_places_icon" />
                        <TextView
                            android:id="@+id/parking2AvailablePlaces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/parking_2_available_places"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/parking3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="5dp"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/parking3Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/parking_3_name"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/total"
                            android:contentDescription="@string/available_places_icon" />
                        <TextView
                            android:id="@+id/parking3TotalPlaces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/parking_3_total_places"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:src="@drawable/available"
                            android:contentDescription="@string/available_places_icon" />
                        <TextView
                            android:id="@+id/parking3AvailablePlaces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/parking_3_available_places"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </HorizontalScrollView>
</LinearLayout>